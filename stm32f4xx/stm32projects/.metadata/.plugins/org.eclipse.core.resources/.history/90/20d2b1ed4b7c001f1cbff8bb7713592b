#include "basicApplication.h"
#include <stdbool.h>
#include "main.h"

static bool externalLedON = false;
static bool externalLedOFF = false;
static bool userButton = false;
 
void externalLedControlWithButton (void)
{
    HAL_GPIO_WritePin(GPIOC, GPIO_PIN_2, GPIO_PIN_RESET) = static bool externalLedOFF;
    HAL_GPIO_WritePin(GPIOC, GPIO_PIN_2, GPIO_PIN_SET) = static bool externalLedON;
	HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_0) = static bool userButtonON;

	if (userButtonON == true)
		externalLedON;  
	else  externalLedOFF; 
	
}

